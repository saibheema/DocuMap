rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Dealer records — authenticated users only
    // Path: dealers/{dealerCode}/records/{financialYear}
    match /dealers/{dealerCode} {
      allow read, write: if request.auth != null;

      match /records/{financialYear} {
        allow read, write: if request.auth != null;
      }
    }

    // Audit log — any authenticated user may read; write is done server-side only
    // (API uses Admin SDK which bypasses these rules, but defense-in-depth helps)
    match /audit_logs/{logId} {
      allow read: if request.auth != null;
      allow write: if false; // server-only via Admin SDK
    }

    // Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
